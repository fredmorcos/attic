include ../mixins/all

block variables
- if(typeof title === "undefined") title="Bookmarkulous"
- if(typeof appcache === "undefined") appcache=null
- if(typeof pageclass === "undefined") pageclass=null

!!! 5
//[if IE 8]><html lang="en" class="no-js old-ie ie8"><![endif]
//[if IE 9]><html lang="en" class="no-js old-ie ie9"><![endif]
//[if gt IE 9]><!
html(class="no-js", lang="en", appcache=appcache)
  //<![endif]
  head
    meta(charset="utf-8")
    title=title
    //[if lt IE 9]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]
    meta(name="description", content="")
    meta(name="viewport", content="user-scalable=no, initial-scale=1, minimum-scale=1, maximum-scale=1, width=device-width")

    // build:css stylesheets/app.min.css
    link(rel="stylesheet", href="stylesheets/app.css")
    // endbuild

    link(rel="apple-touch-icon-precomposed", sizes="144x144", href="apple-touch-icon-144-precomposed.png")
    link(rel="apple-touch-icon-precomposed", sizes="114x114", href="apple-touch-icon-114-precomposed.png")
    link(rel="apple-touch-icon-precomposed", sizes="72x72", href="apple-touch-icon-72-precomposed.png")
    link(rel="apple-touch-icon-precomposed", href="apple-touch-icon-57-precomposed.png")
    link(rel="shortcut icon", href="favicon.png")

    meta(property="og:site_name", content="Le Groupe La Poste")
    meta(property="og:title", content="$title de la page")
    meta(property="og:url", content="$url de la page")
    meta(property="og:description", content="$balise meta description")

    // build:js javascripts/libs/modernizr.min.js
    script(src="javascripts/libs/modernizr.js")
    // endbuild
  body(class=pageclass)
    #app
      include ../common/header
      block body-content
      include ../common/footer
    include ../common/scripts
